<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hc.kotlinstudyexample">
    
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Basic.BasicMainActivity"/>
        <activity android:name=".transitionAnim.ActivityAnimFirst"/>
        <activity android:name=".transitionAnim.ActivityAnimSecond"/>
        <activity android:name=".transitionAnim.TransitionAnimActivity"/>
        <activity android:name=".transitionAnim.ExplodeTestActivity"/>
        <activity android:name=".transitionAnim.ExplodeThirdActivity"/>
        <activity android:name=".H5.H5MainActivity"/>

    </application>

</manifest>